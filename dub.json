{
    "name": "printed",
    "description": "Low-level API to generate self-contained PDF/SVG/HTML documents suitable for print",
    "license": "BSL-1.0",
    "importPaths": [ "source" ],
    "sourcePaths": [ "source" ],

    "dependencies":
    {
        "printed:canvas": "*",
        "printed:shaping": "*",
        "printed:font": "*",
        "printed:image": "*"
    },

   "subPackages": [
        {
            "name": "font",
            "sourcePaths": 
            [ 
                "font/printed/font" 
            ],

            "importPaths": [ "font" ],

            "dependencies": 
            {
                "standardpaths": "~>0.0",
                "binrange": "~>1.0"
            }
        },
        {
            "name": "canvas",
            "sourcePaths": 
            [ 
                "canvas/printed/canvas" 
            ],

            "importPaths": [ "canvas" ],
            "dependencies": 
            {
                "printed:font": "*",
                "binrange": "~>1.0",
                "printed:htmlcolors": "*"
            }
        },
        {
            "name": "htmlcolors",
            "sourcePaths": 
            [ 
                "htmlcolors/printed/htmlcolors" 
            ],

            "importPaths": [ "htmlcolors" ]
        },
        {
            "name": "shaping",
            "sourcePaths": 
            [ 
                "shaping/printed/shaping" 
            ],

            "importPaths": [ "shaping" ]
        }
    ]
}
